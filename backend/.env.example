# Application Configuration
NODE_ENV=development
PORT=8080
APP_NAME=LearnSmart Backend API
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/learnsmart_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=1d
JWT_ISSUER=learnsmart-api
JWT_AUDIENCE=api-client

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/v1/auth/google/callback

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=30
SESSION_TIMEOUT=900000
CSRF_ENABLED=false
CSRF_SECRET=csrf-secret-key
